{{! discourse-sms-login/assets/javascripts/discourse/templates/reset-password.hbs }}
<div class="reset-password">
  <h2>重置密码</h2>
  
  <Input @type="text" @value={{this.phone}} placeholder="手机号" class="form-control" />
  
  <div class="slider-verification">
    <img src="/plugins/discourse-sms-login/images/slider.png" alt="滑动验证" />
    <div class="slider-track">
      <div class="slider-handle" {{action "slideVerify"}}></div>
    </div>
  </div>
  
  <button class="btn btn-primary" disabled={{not this.slideVerified}} {{action "nextStep"}}>下一步</button>
</div>